<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="SettingsButtonStyle">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:gravity">start</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="MainBase">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:background">@color/blue</item>
        <item name="android:padding">@dimen/padding_16dp</item>
    </style>
    <style name="SettingsTitle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="SettingsBase">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:padding">@dimen/padding_16dp</item>
    </style>
    <style name="SearchActivityTitle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>
    <style name="SearchActivityBase">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black_text</item>
    </style>
</resources>